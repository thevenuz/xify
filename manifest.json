{
    "manifest_version": 3,
    "name": "xify",
    "version": "1.0.1",
    "description": "A firefox addon that modifies twitter links to vxtwitter on shortcut Ctrl+Alt+K and copies to clipboard.",
    "permissions":["clipboardWrite", "clipboardRead", "tabs"],
    "content_scripts": [
      {
        "matches": ["*://twitter.com/*","*://x.com/*"],
        "js": ["src/copy.js"]
      }
    ],
    "commands": {
      "modify-link": {
        "suggested_key": {
          "default": "Ctrl+Alt+K",
          "mac": "Command+Alt+K"
        },
        "description": "Copy modified link to clipboard."
      }
    },
    "background": {
      "scripts": ["src/background.js"]
    },
    "host_permissions": [
      "*://twitter.com/*",
      "*://x.com/*"
    ],
    "browser_specific_settings": {
        "gecko": {
          "id": "xify-firefox-addon@thevenuz"
        }
      },
      
      "icons":{
        "16":"assets/icon16.png",
        "32":"assets/icon32.png",
        "48":"assets/icon48.png",
        "128":"assets/icon128.png"
      },
      "incognito":"spanning"      
}